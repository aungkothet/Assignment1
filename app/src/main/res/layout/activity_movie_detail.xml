<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDetailActivity"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingBottom="32dp">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/flash_detail"
                android:id="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="centerCrop" android:contentDescription="@string/app_name"/>

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_back_white"
                android:id="@+id/imageView5" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:scaleType="centerCrop"
                android:contentDescription="@string/app_name" android:onClick="onBackButtonClicked"
        />
        <TextView
                android:text="@string/back_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                android:textSize="20sp" android:fontFamily="@font/abel"
                android:textColor="@android:color/white" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView4"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/share_button"
                android:id="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/margin_large"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
        <TextView
                android:text="@string/flash_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:layout_marginTop="105dp" app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@android:color/white" android:textSize="30sp" android:fontFamily="@font/abel"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline5" app:layout_constraintGuide_begin="@dimen/margin_large"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView8" android:text="@string/flash_subtitle_txt"
                android:textColor="@android:color/white" android:fontFamily="@font/abel" android:textSize="15sp"
                android:textAlignment="textStart"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rating_point" app:layout_constraintStart_toStartOf="@+id/guideline5"
                tools:text="9.7"
                android:fontFamily="@font/abel" android:textSize="12sp" android:textColor="@color/colorRating"
                app:layout_constraintTop_toTopOf="@+id/ratingBar"
                app:layout_constraintBottom_toBottomOf="@+id/ratingBar"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                app:layout_constraintStart_toEndOf="@+id/tv_rating_point"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                android:numStars="5"
                style="@style/RatingBar" android:rating="3.5" android:isIndicator="false"
        />
        <!--style="@android:style/Widget.Material.RatingBar.Small"-->
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/play_button"
                android:id="@+id/imageView9" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_large"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
        />
        <TextView
                android:text="@string/flash_desc_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView14" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_large" app:layout_constraintStart_toStartOf="@+id/guideline5"
                android:textColor="@android:color/white" android:fontFamily="@font/abel" android:textSize="20sp"
        />
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView15" app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/full_cast_and_crews" android:textSize="15sp"
                android:fontFamily="@font/abel" android:textColor="@color/colorFullCast" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginEnd="@dimen/margin_large"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/guideline5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.54"
                app:layout_constraintTop_toBottomOf="@+id/textView15" android:layout_marginTop="8dp"
                android:id="@+id/cast_recycler_view"/>
        <ToggleButton
                android:layout_width="50dp"
                android:textOff=""
                android:textOn=""
                android:layout_height="50dp"
                android:checked="true"
                android:id="@+id/imageView10" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/tb_fav"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cast_recycler_view"
                android:background="@drawable/bg_like_toggle_button"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/textView16" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView10"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintEnd_toEndOf="@+id/imageView10" android:text="@string/total_like"
                android:fontFamily="@font/abel" android:textSize="15sp" android:textColor="@color/colorActionButton"
        />

        <ToggleButton
                android:layout_width="50dp"
                android:textOff=""
                android:textOn=""
                android:layout_height="50dp" android:background="@drawable/bg_fav_toggle_button"
                android:id="@+id/tb_fav" app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/tb_comment"
                app:layout_constraintTop_toTopOf="@+id/imageView10"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/tv_fav_count" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tb_fav"
                app:layout_constraintStart_toStartOf="@+id/tb_fav"
                app:layout_constraintEnd_toEndOf="@+id/tb_fav" android:text="@string/total_fav"
                android:fontFamily="@font/abel" android:textSize="15sp" android:textColor="@color/colorActionButton"/>

        <ToggleButton
                android:layout_width="50dp"
                android:textOff=""
                android:textOn=""
                android:layout_height="50dp" android:background="@drawable/bg_comment_toggle_button"
                android:id="@+id/tb_comment" app:layout_constraintStart_toEndOf="@+id/tb_fav"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tb_fav"
                app:layout_constraintBottom_toBottomOf="@+id/tb_fav"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/tv_comment_count" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tb_comment"
                app:layout_constraintStart_toStartOf="@+id/tb_comment"
                app:layout_constraintEnd_toEndOf="@+id/tb_comment" android:text="@string/total_comment"
                android:fontFamily="@font/abel" android:textSize="15sp" android:textColor="@color/colorActionButton"/>


    </android.support.constraint.ConstraintLayout>
</ScrollView>
