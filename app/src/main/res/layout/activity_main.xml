<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/bg"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.11"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_foreground"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageView"
            android:scaleType="centerCrop" android:contentDescription="@string/app_name"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:text="@string/show_time" android:textAlignment="center"
            android:textAllCaps="true" android:textColor="@color/colorShowTime" android:textSize="24sp"
            android:fontFamily="@font/abel" android:textStyle="bold"/>
    <Button
            android:text="@string/continue_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_continue" android:textAllCaps="false"
            android:background="@drawable/btn_continue_bg" android:layout_marginStart="@dimen/margin_large"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="@dimen/margin_large"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" android:foreground="@drawable/ripple_bg"
            android:onClick="btnContinueClicked"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_large" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_large" android:layout_marginTop="38dp"
            android:text="@string/basic_info_txt" android:textColor="@color/colorText" android:textSize="24sp"
            android:fontFamily="@font/abel"/>
    <TextView
            android:text="@string/name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:textColor="@color/colorText"
            android:fontFamily="@font/roboto" android:textSize="12sp"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="@dimen/margin_large"
            android:id="@+id/guideline2"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline3"
            app:layout_constraintGuide_end="@dimen/margin_large"/>
    <android.support.design.widget.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_name"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:hint="@string/et_name_hint"
            android:fontFamily="@font/roboto"/>
    <TextView
            android:text="@string/email_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_name" android:textColor="@color/colorText"
            android:fontFamily="@font/roboto" android:textSize="12sp"/>
    <android.support.design.widget.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:hint="@string/et_email_hint"
            android:fontFamily="@font/roboto"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_email" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:text="@string/phone_txt" android:textColor="@color/colorText" android:fontFamily="@font/roboto"
            android:textSize="12sp"/>
    <android.support.design.widget.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_phone"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:hint="@string/et_phone_hint" android:fontFamily="@font/roboto"/>
</android.support.constraint.ConstraintLayout>